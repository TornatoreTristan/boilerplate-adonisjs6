{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "paths": {
      "#users/*": ["./app/users/*"],
      "#organizations/*": ["./app/organizations/*"],
      "#admin/*": ["./app/admin/*"],
      "#shared/*": ["./app/shared/*"],
      "#auth/*": ["./app/auth/*"],
      "#roles/*": ["./app/roles/*"],
      "#sessions/*": ["./app/sessions/*"],
      "#notifications/*": ["./app/notifications/*"],
      "#uploads/*": ["./app/uploads/*"],
      "#mailing/*": ["./app/mailing/*"],
      "@/*": ["./inertia/*"]
    }
  },
  "exclude": ["./inertia/**/*", "node_modules", "build"]
}
